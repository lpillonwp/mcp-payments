{
  "name": "payments-mcp",
  "version": "1.0.0",
  "description": "MCP Server para Pagar.me e Woovi",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "payments-mcp": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "env.example"
  ],
  "author": "Luiz Pillon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luizpillon/payments-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/luizpillon/payments-mcp/issues"
  },
  "homepage": "https://github.com/luizpillon/payments-mcp#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "payments",
    "pagarme",
    "woovi",
    "openpix",
    "pix"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "rm -rf dist && tsc && tsc-alias",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "rm -rf dist && tsc -w",
    "e2e": "npm run build && node scripts/e2e-http.mjs --mode=full",
    "e2e:strict": "npm run build && node scripts/e2e-http.mjs --mode=full --strict",
    "e2e:smoke": "npm run build && node scripts/e2e-http.mjs --mode=smoke",
    "e2e:contract": "npm run build && node scripts/e2e-http.mjs --mode=contract",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.1",
    "@pagarme/pagarme-nodejs-sdk": "^6.8.16",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/express": "^4.17.21",
    "tsc-alias": "^1.8.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.0",
    "typescript": "^5.7.2"
  }
}